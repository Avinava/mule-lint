{
    "name": "@sfdxy/mule-lint",
    "version": "1.3.0",
    "description": "Static analysis tool for MuleSoft applications - supports humans, AI agents, and CI/CD pipelines",
    "author": "Avinava",
    "license": "MIT",
    "keywords": [
        "mulesoft",
        "mule",
        "lint",
        "static-analysis",
        "xml",
        "sarif",
        "cli"
    ],
    "bin": {
        "mule-lint": "./dist/bin/mule-lint.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/ --ext .ts",
        "lint:fix": "eslint src/ --ext .ts --fix",
        "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run build && npm test"
    },
    "dependencies": {
        "@xmldom/xmldom": "^0.8.10",
        "chalk": "^4.1.2",
        "commander": "^11.1.0",
        "fast-glob": "^3.3.2",
        "js-yaml": "^4.1.1",
        "xpath": "^0.0.34"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.19.27",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.7.4",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Avinava/mule-lint.git"
    },
    "bugs": {
        "url": "https://github.com/Avinava/mule-lint/issues"
    },
    "homepage": "https://github.com/Avinava/mule-lint#readme"
}
